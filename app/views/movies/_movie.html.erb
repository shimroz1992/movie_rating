<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Movie year:</strong>
    <%= movie.movie_year %>
  </p>

  <p>
    <strong>Director:</strong>
    <%= movie.director %>
  </p>

  <p>
    <strong>Actor:</strong>
    <%= movie.actor %>
  </p>

  <p>
    <strong>Filming location:</strong>
    <%= movie.filming_location %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= movie.country %>
  </p>
  <%= form_tag(rate_movie_path(movie), method: :post, remote: true) do %>
    <%= rating_for movie, "review" %>
    <%= label_tag :comment, "Review Comment:" %>
    <%= text_area_tag :comment %>
    <%= submit_tag "Rate" %>
  <% end %>
</div>
